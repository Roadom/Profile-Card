<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9EBB2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/me"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Mon David R. Olarte"
        android:textColor="#333333 "
        android:textFontWeight="900"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textFontWeight="700"
        android:text="mrolarte@student.apc.edu.ph"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textFontWeight="700"
        android:text="Philippines"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/country"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:gravity="top|center_horizontal"
        android:text="Hello! I'm a 2nd year Computer Science student in Asia Pacific College. I hope to make meaningful connections with like-minded individuals"
        android:textColor="#333333"
        android:textFontWeight="600"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/social_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <!-- Icons used were sourced from flaticons.com -->
        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Facebook"
            android:scaleType="fitCenter"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/twitter"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/twitter"
            android:contentDescription="X"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/linkedin"
            android:scaleType="fitCenter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/linkedin"
            android:contentDescription="Linkedin"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/github"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Github"
            android:scaleType="fitCenter"
            android:src="@drawable/github" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/social_media"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">


        <Button
            android:textColor="#fff"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:text="MESSAGE"/>

        <Button
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:text="FOLLOW"/>

    </LinearLayout>


</RelativeLayout>
